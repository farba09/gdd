{% extends 'base.html.twig' %}

{% block title %}Formulaire de Signalement{% endblock %}

{% block body %}
    <div class="max-w-3xl mx-auto py-8 px-4">
        <h1 class="text-3xl md:text-4xl font-bold text-indigo-600 text-center">
            Formulaire de Signalement
        </h1>
        <p class="text-base italic text-gray-500 mb-8">Veuillez remplir tous les champs ci-dessous.</p>

        {# Affichage des messages flash #}
        {% for message in app.flashes('success') %}
            <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
                {{ message }}
            </div>
        {% endfor %}

        {# Application du thème Tailwind au formulaire #}
        {% form_theme form 'tailwind_2_layout.html.twig' %}

        {# Début du formulaire avec classes de style #}
        {{ form_start(form, {
            'attr': {
                'class': 'bg-white shadow-lg rounded-lg p-6 md:p-8 border border-gray-200'
            }
        }) }}

        {# Affichage de tous les champs du formulaire #}
        {{ form_widget(form) }}

        {# Bouton de soumission #}
        <button type="submit"
                class="mt-6 w-full bg-indigo-600 text-xl rounded-md text-white font-semibold px-4 py-2 cursor-pointer">
            Envoyer le signalement
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}
